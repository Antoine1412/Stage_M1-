moyenne_list = []
## Marche mais erreur inconnu à partir du fichier n°558
i = 1
while i<len(data):
    E=data[i]
    with open(E, "r") as file:
        G = json.load(file)
    plddt = G["plddt"]
    moyenne = sum(plddt)/len(plddt)
    print(moyenne)
    i = i + 1
    moyenne_list.append(moyenne)


i
